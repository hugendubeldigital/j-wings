<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
    "http://java.sun.com/j2ee/dtds/web-app_2.2.dtd">

<web-app>
  <servlet>
    <servlet-name>
      Ide
    </servlet-name>
    <servlet-class>
      ide.Ide
    </servlet-class>

    <init-param>
      <param-name>build.dir</param-name>
      <param-value>/home/hengels/wingx/test</param-value>
    </init-param>

    <init-param>
      <param-name>plaf.source</param-name>
      <param-value>name</param-value>
    </init-param>
  </servlet>

<!-- url mapping -->

  <servlet-mapping>
    <servlet-name>
      Ide
    </servlet-name>
    <url-pattern>
      /Ide/*
    </url-pattern>
  </servlet-mapping>

</web-app>
