<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
  PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
  "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">

<web-app>

  <!--servlet>
    <servlet-name>Externalizer</servlet-name>
    <servlet-class>org.wings.externalizer.ExternalizerServlet</servlet-class>
  </servlet-->

  <servlet>
    <servlet-name>HelloWingS</servlet-name>
    <servlet-class>HelloWingSServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>HelloWingSExt</servlet-name>
    <servlet-class>HelloWingSExtServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>WingSTutorial</servlet-name>
    <servlet-class>de.mercatis.hellowings.WingSTutorialServlet</servlet-class>
    <init-param>
      <param-name>slides.config</param-name>
      <param-value>WEB-INF/tutorial-slides.properties</param-value>
    </init-param>
    <init-param>
      <param-name>slides.template</param-name>
      <param-value>WEB-INF/tutorial-frame.thtml</param-value>
    </init-param>
    <!--init-param>
      <param-name>FileExtDir</param-name>
      <param-value>/tmp/</param-value>
    </init-param>
    <init-param>
      <param-name>ServletExtURL</param-name>
      <param-value>Externalizer</param-value>
    </init-param>
    <init-param>
      <param-name>externalizer.file.url</param-name>
      <param-value>Externalizer</param-value>
    </init-param>
    <init-param>
      <param-name>externalizer.file.path</param-name>
      <param-value>/tmp/</param-value>
    </init-param-->
  </servlet>

  <!--servlet-mapping>
    <servlet-name>Externalizer</servlet-name>
    <url-pattern>/Externalizer/*</url-pattern>
  </servlet-mapping-->

  <servlet-mapping>
    <servlet-name>HelloWingS</servlet-name>
    <url-pattern>/HelloWingS/*</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>HelloWingSExt</servlet-name>
    <url-pattern>/HelloWingSExt/*</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>WingSTutorial</servlet-name>
    <url-pattern>/WingSTutorial/*</url-pattern>
  </servlet-mapping>

  <!-- The Welcome File List -->
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>

</web-app>






















