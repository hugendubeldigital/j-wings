<%!
/**
 * Prints an optional attribute. If the value has a content 
 * (value != null && value.length > 0), the attrib is added otherwise 
 * it is left out
 */
void printOptAttr(String attr, String value) {
    if (value != null && value.length > 0) %> <%=attr%>="<%=value%>"<%!;
}

void printStyle(Style style) {
    String value = null;
    if (style != null) value = style.getID();
    if (value != null && value.length > 0) %> class="<%=value%>"<%!;
}
%>
