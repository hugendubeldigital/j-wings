<template name="TextArea" for="org.wings.STextArea">
<%@ include file="common.plaf"%>

<write>
<textarea cols="<%?columns%>" rows="<%?rows%>"<%
if (!component.isEditable()) %> readonly="1"<%;
if (component.isEnabled())   %> name="<%?namePrefix%>"<%;
printStyle(component.getStyle()); 
switch (component.getLineWrap()) {
   case STextArea.VIRTUAL_WRAP : %> wrap="virtual"<%; break;
   case STextArea.PHYSICAL_WRAP: %> wrap="physical"<%; break;
};
%>><%?text%></textarea>
</write>
</template>
